{
    "version": 2,
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/$1"
        },
        {
            "src": "^/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "handlers": [
                "filesystem"
            ],
            "continue": true
        },
        {
            "src": "/.*",
            "dest": "/index.html",
            "status": 200
        },
        {
            "rewrites": [
                {
                    "source": "/(.*)",
                    "destination": "/index.html"
                }
            ]
        }
    ]
}